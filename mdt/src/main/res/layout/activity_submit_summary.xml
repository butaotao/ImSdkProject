<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.order.summary.SubmitSummaryActivity">

    <RelativeLayout style="@style/Common_Title_style">

        <Button
            android:id="@+id/back_btn"
            style="@style/ActionBar_BackBtn"/>

        <TextView
            android:id="@+id/title"
            style="@style/ActionBar_Title"
            android:text="填写会诊小结"/>

        <TextView
            android:id="@+id/right_btn"
            style="@style/ActionBar_RightText"
            android:text="确定"
            />
        <ImageView
            style="@style/title_divider_line"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_diagnose_opinion"
        style="@style/edit_order_list_item">
        <TextView
            style="@style/edit_order_item_title"
            android:text="诊断意见"
            />
        <TextView
            android:id="@+id/tv_diagnose_opinion"
            style="@style/edit_order_item_content"
            />
        <ImageView
            style="@style/edit_order_item_arrow"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_diagnose_tag"
        style="@style/edit_order_list_item">
        <TextView
            style="@style/edit_order_item_title"
            android:text="分期"
            />
        <TextView
            android:id="@+id/tv_diagnose_tag"
            style="@style/edit_order_item_content"
            />
        <ImageView
            style="@style/edit_order_item_arrow"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_examine_opinion"
        style="@style/edit_order_list_item">
        <TextView
            style="@style/edit_order_item_title"
            android:text="检查意见"
            />
        <TextView
            android:id="@+id/tv_examine_opinion"
            style="@style/edit_order_item_content"
            />
        <ImageView
            style="@style/edit_order_item_arrow"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_treat_opinion"
        style="@style/edit_order_list_item">
        <TextView
            style="@style/edit_order_item_title"
            android:text="治疗建议"
            />
        <TextView
            android:id="@+id/tv_treat_opinion"
            style="@style/edit_order_item_content"
            />
        <ImageView
            style="@style/edit_order_item_arrow"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_other"
        style="@style/edit_order_list_item">
        <TextView
            style="@style/edit_order_item_title"
            android:text="其他"
            />
        <TextView
            android:id="@+id/tv_other"
            style="@style/edit_order_item_content"
            />
        <ImageView
            style="@style/edit_order_item_arrow"/>
    </LinearLayout>

</LinearLayout>
