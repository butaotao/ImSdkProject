<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.dachen.mdt.activity.me.ModifyPwdActivity">


    <RelativeLayout style="@style/Common_Title_style">

        <Button
            android:id="@+id/back_btn"
            style="@style/ActionBar_BackBtn" />

        <TextView
            android:id="@+id/title"
            style="@style/ActionBar_Title"
            android:text="修改密码" />

        <Button
            android:id="@+id/right_btn"
            style="@style/ActionBar_RightText"
            android:text="确定" />

        <ImageView style="@style/title_divider_line" />
    </RelativeLayout>

    <com.dachen.common.widget.PasswordView
        android:id="@+id/et_pwd_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="20dp"
        android:minHeight="44dp" />

    <com.dachen.common.widget.PasswordView
        android:id="@+id/et_pwd_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:minHeight="44dp" />

    <com.dachen.common.widget.PasswordView
        android:id="@+id/et_pwd_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:minHeight="44dp" />
</LinearLayout>
