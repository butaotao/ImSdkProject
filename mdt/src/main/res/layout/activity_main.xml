<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.dachen.mdt.activity.main.MainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView style="@style/divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FBFDFD"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/rl_tab_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                style="@style/main_tab_text"
                android:drawableTop="@drawable/main_btm_hall_selector"
                android:text="会诊大厅" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab_patient"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                style="@style/main_tab_text"
                android:drawableTop="@drawable/main_btm_patient_selector"
                android:text="患者" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                style="@style/main_tab_text"
                android:drawableTop="@drawable/main_btm_me_selector"
                android:text="我" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
