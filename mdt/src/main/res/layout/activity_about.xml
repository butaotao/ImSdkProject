<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.dachen.mdt.activity.me.AboutActivity">

    <RelativeLayout style="@style/Common_Title_style">

        <Button
            android:id="@+id/back_btn"
            style="@style/ActionBar_BackBtn"/>

        <TextView
            android:id="@+id/title"
            android:text="关于"
            style="@style/ActionBar_Title"
            />

        <ImageView
            style="@style/title_divider_line"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/avatar_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:contentDescription="@string/app_name"
            android:gravity="center_horizontal"
            android:paddingBottom="5.0dip"
            android:paddingLeft="4.0dip"
            android:paddingRight="6.0dip"
            android:paddingTop="5.0dip"
            android:src="@drawable/app_icon" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar_img"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="玄关健康医生端"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="V4.6"
            android:textColor="@color/grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:text="Copyright © 2016. All Rights Reserved."
            android:textColor="@color/grey"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/textView5"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="广州医加多医疗股份有限公司  版权所有"
            android:textColor="@color/grey"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/service_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/textView4"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务条款"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/blue" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私政策"
                android:textColor="@color/blue" />
        </LinearLayout>

        <TextView
            android:id="@+id/versionUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/service_policy"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="检查新版本"
            android:textColor="@color/blue"/>
    </RelativeLayout>


</LinearLayout>
