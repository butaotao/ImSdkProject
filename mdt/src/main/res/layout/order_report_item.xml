<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="12dp"
              android:orientation="vertical">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar_normal"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="123"
                android:textColor="#333"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_name_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="123"
                android:textColor="#aaa"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_no_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂未填写"
            android:textColor="@color/orange"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:id="@+id/ll_report_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_divider"
            style="@style/divider_line"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:id="@+id/ll_diagnose_opinion"
            style="@style/order_report_line"
            >

            <TextView
                style="@style/order_report_line_title"
                android:text="诊断意见:"
                />

            <TextView
                android:id="@+id/tv_diagnose_opinion"
                style="@style/order_report_line_content"
                android:text="考虑XXXXXXX细胞癌"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_examine_opinion"
            style="@style/order_report_line"
            >

            <TextView
                style="@style/order_report_line_title"
                android:text="检查意见:"
                />

            <TextView
                android:id="@+id/tv_examine_opinion"
                style="@style/order_report_line_content"
                android:text="考虑XXXXXXX细胞癌"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_treat_opinion"
            style="@style/order_report_line"
            >

            <TextView
                style="@style/order_report_line_title"
                android:text="治疗建议:"
                />

            <TextView
                android:id="@+id/tv_treat_opinion"
                style="@style/order_report_line_content"
                android:text="考虑XXXXXXX细胞癌"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_other"
            style="@style/order_report_line"
            >

            <TextView
                style="@style/order_report_line_title"
                android:text="其他:"
                />

            <TextView
                android:id="@+id/tv_other"
                style="@style/order_report_line_content"
                android:text="考虑XXXXXXX细胞癌"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>