                        />

                    <TextView
                        android:id="@+id/tv_treat_process"
                        style="@style/edit_order_item_content"

                        />

                    <ImageView
                        style="@style/edit_order_item_arrow"/>
                </LinearLayout>

                <ImageView
                    style="@style/divider_line"
                    android:layout_marginLeft="@dimen/edit_case_divider_left"/>

                <LinearLayout
                    android:id="@+id/ll_examine_result"
                    style="@style/edit_order_list_item">

                    <TextView
                        style="@style/edit_order_item_title"
                        android:text="检查结果"
                        />

                    <TextView
                        android:id="@+id/tv_examine_result"
                        style="@style/edit_order_item_content"

                        />

                    <ImageView
                        style="@style/edit_order_item_arrow"/>
                </LinearLayout>

                <ImageView
                    style="@style/divider_line"
                    android:layout_marginLeft="@dimen/edit_case_divider_left"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="影像学检查"/>

                    <EditText
                        android:id="@+id/et_image_examine"
                        android:background="@drawable/grey_round_corner_shape"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:hint="备注"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.dachen.common.widget.NoScrollerGridView
                        android:id="@+id/gv_image_examine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:fadingEdge="none"
                        android:listSelector="@null"
                        android:verticalSpacing="3dp"
                        android:horizontalSpacing="3dp"
                        android:fastScrollEnabled="false"
                        android:focusable="false"
                        android:padding="0dp"
                        android:numColumns="4"
                        android:scrollbars="none"
                        android:smoothScrollbar="true"/>

                </LinearLayout>

                <ImageView
                    style="@style/divider_line"
                    android:layout_marginLeft="@dimen/edit_case_divider_left"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content"
                        android:text="病理学检查"/>
                    <!--<GridView-->
                    <EditText
                        android:id="@+id/et_pathology_examine"
                        android:background="@drawable/grey_round_corner_shape"
                        android:layout_marginRight="10dp"
                        android:hint="备注"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="12sp"
                        android:padding="5dp"
