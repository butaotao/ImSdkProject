<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dachen.mdt.activity.order.EditOrderCaseActivity">

    <RelativeLayout style="@style/Common_Title_style">

        <Button
            android:id="@+id/back_btn"
            style="@style/ActionBar_BackBtn"/>

        <TextView
            android:id="@+id/title"
            style="@style/ActionBar_Title"
            android:text="发起会诊"/>

        <ImageView
            style="@style/title_divider_line"
            />

        <TextView
            android:id="@+id/right_btn"
            style="@style/ActionBar_RightText"
            android:text="确定"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_patient_name"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="患者姓名"
                   />
                <TextView
                    android:id="@+id/tv_patient_name"
                    style="@style/edit_order_item_content"
                    
                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_patient_sex"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="性别"
                   />
                <TextView
                    android:id="@+id/tv_patient_sex"
                    style="@style/edit_order_item_content"

                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_patient_age"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="年龄"
                   />
                <TextView
                    android:id="@+id/tv_patient_age"
                    style="@style/edit_order_item_content"

                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_patient_phone"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="电话"
                   />
                <TextView
                    android:id="@+id/tv_patient_phone"
                    style="@style/edit_order_item_content"

                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_patient_id"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="患者ID"
                   />
                <TextView
                    android:id="@+id/tv_patient_id"
                    style="@style/edit_order_item_content"

                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_mdt_group"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="MDT小组"
                   />
                <TextView
                    android:id="@+id/tv_mdt_group"
                    style="@style/edit_order_item_content"

                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_category"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="分组"
                   />
                <TextView
                    android:id="@+id/tv_category"
                    style="@style/edit_order_item_content"
                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_purpose"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="会诊目的"
                    />
                <TextView
                    android:id="@+id/tv_purpose"
                    style="@style/edit_order_item_content"
                    />
                <ImageView
                    style="@style/edit_order_item_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_end_time"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="结束时间"
                   />
                <TextView
                    android:id="@+id/tv_end_time"
                    style="@style/edit_order_item_content"
                    
                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_first_diagnose"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="初步诊断"
                   />
                <TextView
                    android:id="@+id/tv_first_diagnose"
                    style="@style/edit_order_item_content"
                    
                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_chief_complaint"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="主诉"
                   />
                <TextView
                    android:id="@+id/tv_chief_complaint"
                    style="@style/edit_order_item_content"
                    
                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_present_history"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="现病史"
                   />
                <TextView
                    android:id="@+id/tv_present_history"
                    style="@style/edit_order_item_content"
                    
                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_previous_history"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="既往史"
                   />
                <TextView
                    android:id="@+id/tv_previous_history"
                    style="@style/edit_order_item_content"
                    
                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_family_history"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="家族史"
                   />
                <TextView
                    android:id="@+id/tv_family_history"
                    style="@style/edit_order_item_content"

                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_personal_history"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="个人史"
                    />
                <TextView
                    android:id="@+id/tv_personal_history"
                    style="@style/edit_order_item_content"
                    
                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_body_sign"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="体征"
                   />
                <TextView
                    android:id="@+id/tv_body_sign"
                    style="@style/edit_order_item_content"
                    
                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_treat_process"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="诊疗经过"
                   />
                <TextView
                    android:id="@+id/tv_treat_process"
                    style="@style/edit_order_item_content"
                    
                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_examine_result"
                style="@style/edit_order_list_item">
                <TextView
                    style="@style/edit_order_item_title"
                    android:text="检查结果"
                   />
                <TextView
                    android:id="@+id/tv_examine_result"
                    style="@style/edit_order_item_content"
                    
                   />
                <ImageView
                   style="@style/edit_order_item_arrow"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
