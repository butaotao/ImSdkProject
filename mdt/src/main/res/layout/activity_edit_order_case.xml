<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.dachen.mdt.activity.order.EditOrderCaseActivity"
    tools:ignore="HardcodedText">

    <RelativeLayout style="@style/Common_Title_style">

        <Button
            android:id="@+id/back_btn"
            style="@style/ActionBar_BackBtn"/>

        <TextView
            android:id="@+id/title"
            style="@style/ActionBar_Title"
            android:text="发起会诊"/>

        <ImageView
            style="@style/title_divider_line"
            />

        <TextView
            android:id="@+id/right_btn"
            style="@style/ActionBar_RightText"
            android:text="确定"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="0dp"
                    >

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="16dp"
                        android:background="#3764ba"/>

                    <TextView
                        style="@style/edit_order_item_title"
                        android:layout_marginLeft="10dp"
                        android:text="患者信息"
                        android:textColor="#171717"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_patient_name"
                    style="@style/edit_order_list_item">

                    <TextView
                        style="@style/edit_order_item_title"
                        android:text="患者姓名"
                        />

                    <TextView
                        android:id="@+id/tv_patient_name"
                        style="@style/edit_order_item_content"
                        />

                    <ImageView
                        style="@style/edit_order_item_arrow"/>
                </LinearLayout>

                <ImageView
                    style="@style/divider_line"
                    android:layout_marginLeft="@dimen/edit_case_divider_left"/>

                <LinearLayout
                    android:id="@+id/ll_id_card"
                    style="@style/edit_order_list_item">

                    <TextView
                        style="@style/edit_order_item_title"
                        android:text="身份证号"
                        />

                    <TextView
                        android:id="@+id/tv_id_card"
                        style="@style/edit_order_item_content"
                        />

                    <ImageView
                        style="@style/edit_order_item_arrow"/>
                </LinearLayout>

                <ImageView
                    style="@style/divider_line"
                    android:layout_marginLeft="@dimen/edit_case_divider_left"/>
                <LinearLayout
                    android:id="@+id/ll_patient_sex"
                    style="@style/edit_order_list_item">

                    <TextView
                        style="@style/edit_order_item_title"
                        android:text="性别"
                        />

                    <TextView
                        android:id="@+id/tv_patient_sex"
                        style="@style/edit_order_item_content"
                        android:hint="*请选择"
                        />

                    <ImageView
                        style="@style/edit_order_item_arrow"/>
                </LinearLayout>

                <ImageView
                    style="@style/divider_line"
                    android:layout_marginLeft="@dimen/edit_case_divider_left"/>

                <LinearLayout
                    android:id="@+id/ll_patient_age"
                    style="@style/edit_order_list_item">

                    <TextView
                        style="@style/edit_order_item_title"
                        android:text="年龄"
                        />

                    <TextView
                        android:id="@+id/tv_patient_age"
                        style="@style/edit_order_item_content"

                        />

                    <ImageView
                        style="@style/edit_order_item_arrow"/>
                </LinearLayout>

                <ImageView
                    style="@style/divider_line"
                    android:layout_marginLeft="@dimen/edit_case_divider_left"/>

                <LinearLayout
                    android:id="@+id/ll_patient_phone"
                    style="@style/edit_order_list_item">

                    <TextView
                        style="@style/edit_order_item_title"
                        android:text="电话"
                        />

                    <TextView
                        android:id="@+id/tv_patient_phone"
                        style="@style/edit_order_item_content"

                        />

                    <ImageView
                        style="@style/edit_order_item_arrow"/>
                </LinearLayout>

                <ImageView
                    style="@style/divider_line"
                    android:layout_marginLeft="@dimen/edit_case_divider_left"/>

                <LinearLayout
                    android:id="@+id/ll_patient_id"
                    style="@style/edit_order_list_item">

                    <TextView
                        style="@style/edit_order_item_title"
                        android:text="患者ID"
                        />

                    <TextView
                        android:id="@+id/tv_patient_id"
                        style="@style/edit_order_item_content"

                        />

                    <ImageView
                        style="@style/edit_order_item_arrow"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
