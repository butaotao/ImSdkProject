                <!--<LinearLayout-->
                    <!--android:id="@+id/ll_first_diagnose"-->
                    <!--style="@style/edit_order_list_item">-->

                    <!--<TextView-->
                        <!--style="@style/edit_order_item_title"-->
                        <!--android:text="初步诊断"-->
                        <!--/>-->

                    <!--<TextView-->
                        <!--android:id="@+id/tv_first_diagnose"-->
                        <!--style="@style/edit_order_item_content"-->

                        <!--/>-->

                    <!--<ImageView-->
                        <!--style="@style/edit_order_item_arrow"/>-->
                <!--</LinearLayout>-->

                <!--<ImageView-->
                    <!--style="@style/divider_line"-->
                    <!--android:layout_marginLeft="@dimen/edit_case_divider_left"/>-->

                <LinearLayout
                    android:id="@+id/ll_chief_complaint"
                    style="@style/edit_order_list_item">

                    <TextView
                        style="@style/edit_order_item_title"
                        android:text="主诉"
                        />

                    <TextView
                        android:id="@+id/tv_chief_complaint"
                        style="@style/edit_order_item_content"

                        />

                    <ImageView
