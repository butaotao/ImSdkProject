                <!--</LinearLayout>-->

                <LinearLayout
                    android:id="@+id/ll_purpose"
                    style="@style/edit_order_list_item">

                    <TextView
                        style="@style/edit_order_item_title"
                        android:text="会诊目的"
                        />

                    <TextView
                        android:id="@+id/tv_purpose"
                        style="@style/edit_order_item_content"
                        />

                    <ImageView
