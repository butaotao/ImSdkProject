<resources>

    <!--<style name="AppTheme" parent="android:Theme.Light.NoTitleBar">-->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:buttonStyle">@android:style/Widget.Button</item>
    </style>

    <style name="IMEditText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColorHint">#bbbbbb</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="IMLineEditText" parent="@style/IMEditText">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="IMHyperText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/hyper_text</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--common-->
    <style name="divider_line">
        <item name="android:background">#e5eaea</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>
    <style name="divider_line_2">
        <item name="android:background">#dce0e1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>
    <style name="title_divider_line" parent="divider_line">
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <!--MainActivity-->
    <style name="main_tab_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tab_textview_color</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_title_bar">
        <item name="android:background">#3764ba</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/top_bar_height</item>

    </style>
    <style name="main_title_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Arrow_Item_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="ActionBar_BackBtn">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/selector_btn_back</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:minWidth">40dip</item>
        <item name="android:drawableLeft">@drawable/back_exit</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:alpha">255</item>
        <item name="android:onClick">onLeftClick</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:text">@string/back_text</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ActionBar_RightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">54dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_btn_back</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ActionBar_RightImg">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_btn_back</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_more</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Common_Title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:background">#3764BA</item>
    </style>

    <style name="ActionBar_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">180dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--Order-->
    <style name="edit_order_list_item">
        <item name="android:background">@drawable/setting_click_bg</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">44dp</item>
    </style>
    <style name="edit_order_item_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666</item>
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="edit_order_item_content" >
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:hint">未输入</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="edit_order_item_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/arrow_right</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="order_report_line">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="order_report_line_title">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#aaa</item>
    </style>
    <style name="order_report_line_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="order_confirm_line">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="order_confirm_line_title">
        <item name="android:layout_width">75dp</item>
        <item name="android:hint">未填写</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#aaa</item>
    </style>
    <style name="order_confirm_line_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="PopWindowItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PopWindowItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ems">6</item>
    </style>
</resources>
